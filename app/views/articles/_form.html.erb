<% if @article.errors.any? %>
 <h2>The following errors prevented the article from saving:</h2>
 <ul>
 <% @article.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>

<div class="container mx-auto my-6 rounded border border-yellow-500 bg-black text-black">
  <div class="p-5 space-x-5 ">
    <%= form_for @article do |f| %>
    <p class>
      <%= f.label :title, class: 'text-white' %><br>
      <%= f.text_area :title, class:'text-black w-full'%>
    </p>
    <p class="my-6">
      <%= f.label :photo, class: 'text-white' %><br>
      <%= f.file_field :photo, onchange:"document.getElementById('uploaded-file').src = window.URL.createObjectURL(this.files[0])" %>
      <div class="max-w-2xl max-h-80" >
        <img id="uploaded-file" alt="Your image" width="100%" height="100%" />
      </div>
    </p>
    <p class="my-6 pt-6">
      <%= f.submit class:'focus:outline-none mt-5 bg-yellow-600 px-4 py-2 text-white rounded w-full hover:font-bold hover:bg-yellow-500' %>
    </p>
    <% end %>
  </div>
</div>
