<% if @article.errors.any? %>
 <h2>The following errors prevented the article from saving:</h2>
 <ul>
 <% @article.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>
<%= form_for @article do |f| %>
 <p class>
  <%= f.label :title %><br>
  <%= f.text_area :title %>
 </p>
 <p>
  <%= f.label :photo %><br>
  <%= f.file_field :photo %>
 </p>
 <p>
  <%= f.submit %>
 </p>
<% end %>
