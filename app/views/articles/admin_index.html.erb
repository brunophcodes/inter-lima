<div class="px-3 py-8 my-10 text-center">
  <p class="py-6 text-center font-bold text-2xl">Panel de administrador - Index de artículos</p>
  <%= link_to "Crear nuevo artículo", new_article_path, class:"my-6 mx-5 p-3 bg-yellow-500 text-lg rounded hover:font-bold hover:bg-yellow-600" %>
</div>

<div class="pb-10">
  <table class="text-center font-bold border-separate border-spacing-2">
    <tr>
      <th>Título</th>
      <th>Cuerpo</th>
      <th>Imagen</th>
      <th>Editar</th>
      <th>Mostrar</th>
      <th>Borrar</th>
    </tr>
    <% @articles.each do |article| %>
    <tr class="bg-yellow-600">
      <td class="w-1/5"><%= article.title %></td>
      <td><%= truncate article.body %></td>
      <td class="w-1/3"><%= image_tag(article.photo, class:"h-32 inline hover:scale-150") %></td>
      <td><%= link_to image_tag('edit.svg', class:'h-8 md:h-10 inline hover:scale-125'), edit_article_path(article) %></td>
      <td><%= link_to image_tag('show.svg', class:'h-8 md:h-10 inline hover:scale-125'), article_path(article) %></td>
      <td><%= button_to image_tag('delete.svg', class:'h-8 md:h-10 inline hover:scale-125'), article_path(article), method: :delete, data: {turbo_confirm: "¿Está seguro?"} %></td>
    </tr>
    <% end %>
  </table>
</div>