<div class="px-3 py-8 my-10 text-center">
  <p>Mostrando todos los artículos</p>
  <button class="bg-yellow-500 my-6 mx-5 p-3 rounded font-bold">
  <%= link_to "Crear nuevo artículo", new_article_path %>
  </button>
</div>
<table class="text-center">
  <tr>
    <th>Title</th>
    <th>Photo</th>
  </tr>
  <% @articles.each do |article| %>
  <tr class="bg-yellow-500">
    <td><%= article.title %></td>
    <td><%= image_tag(article.photo, class:"h-32 inline") %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Show', article_path(article) %></td>
    <td><%= button_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</table>
