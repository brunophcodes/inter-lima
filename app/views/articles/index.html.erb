<div class="px-3 py-8 my-10 text-center">
  <p class="py-6 text-center font-bold">Mostrando todos los artículos</p>
  <%= link_to "Crear nuevo artículo", new_article_path, class:"my-6 mx-5 p-3 bg-yellow-600 rounded hover:font-bold hover:bg-yellow-500" %>
</div>
<table class="text-center font-bold border-separate border-spacing-2">
  <tr>
    <th>Título</th>
    <th>Foto</th>
  </tr>
  <% @articles.each do |article| %>
  <tr class="bg-yellow-600">
    <td><%= article.title %></td>
    <td><%= image_tag(article.photo, class:"h-32 inline hover:scale-150") %></td>
    <td><%= link_to 'Edit', edit_article_path(article), class:'bg-black p-3 rounded hover:font-bold hover:bg-yellow-500' %></td>
    <td><%= link_to 'Show', article_path(article), class:'bg-black p-3 rounded hover:font-bold hover:bg-yellow-500' %></td>
    <td><%= button_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} , class:'bg-red-600 p-3 rounded hover:font-bold hover:bg-red-500'%></td>
  </tr>
  <% end %>
</table>
