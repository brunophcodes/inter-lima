<!--HOMEPAGE-->

<!--Social Media Sticky navbar-->

<div class="fixed right-0 top-1/4 z-50 flex flex-col border-4 border-yellow-500 bg-black">
    <a href="https://www.instagram.com/interdelima/" class="mx-3 my-6 px-3 py-3 space-x-3" target="blank"> <%= image_tag("instagram.png", class:"h-16 inline")%></a>
    <a href="https://twitter.com/interdelima" class="mx-3 my-6 px-3 py-3 space-x-3" target="blank"> <%= image_tag("twitter.png", class:"h-16 inline")%></a>
    <a href="https://www.youtube.com/channel/UCw1RMu-4mKd4feQxNyeHTJw" class="mx-3 my-6 px-3 py-3 space-x-3" target="blank"> <%= image_tag("youtube.png", class:"h-16 inline")%></a>
    <a href="https://www.tiktok.com/@interdelima?lang=es" class="mx-3 my-6 px-3 py-3 space-x-3" target="blank"> <%= image_tag("tiktok.png", class:"h-16 inline")%></a>
</div>


<!--Hero Section-->

<section class="py-5 bg-gradient-to-b from-zinc-950 from-30% via-neutral-800 via-50% to-zinc-950 to-90%"> <!--Improve gradient or change to plain color-->

  <!--Articles Carousel-->
   <div class="py-12 mx-auto w-1/2 ">
    <swiper-container class="flex flex-col items-center justify-center " autoplay="true" pagination="true" scrollbar="true">
          <% @banner_articles.each do |article| %>
              <swiper-slide>
                <div class="max-w-full shadow-lg rounded-lg border-4 border-yellow-500">
                  <%= image_tag(article.photo, class:"object-fill m-0") %>
                  <p class="text-center font-bold text-2xl bg-yellow-500 py-8"><%=article.title %></p>
                </div>
              </swiper-slide>
          <% end %>
    </swiper-container>
  </div>

  <!--Teams-->
  <div class="" x-data="{activeTab: 1}">
    <div id="teams" class="text-center text-2xl font-bold py-6">
      <p> NUESTROS  <span class="text-yellow-500 font-bold">EQUIPOS</span></p>
      <!--Games-->
      <div class="mx-auto my-6 py-6 inset-0 w-1/2 h-20 border-b border-yellow-500 ">
        <nav id="tabs-container" class="flex justify-center" aria-label="Tabs" role="tablist">
          <button type="button"
          class="py-3 px-3 inline-flex items-center gap-2 border border-b-0 border-yellow-500 focus:outline-none rounded-tl-md text-lg whitespace-nowrap  hover:underline"
          :class="activeTab===1 ? 'font-bold text-yellow-500 bg-black' : ''"
          @click="activeTab=1"
          id="tab-1">
            <span> FIFA </span>
          </button>
          <button type="button"
          class="py-3 px-3 inline-flex items-center gap-2 border border-b-0 border-yellow-500 focus:outline-none rounded-tr-md text-lg whitespace-nowrap hover:underline"
          :class="activeTab===2 ? 'font-bold text-yellow-500 bg-black' : ''"
          @click="activeTab=2"
          id="tab-2">
            <span> VALORANT </span>
          </button>
        </nav>
      </div>
    </div>

    <div id="tabs-content" class="mt-3 mx-auto flex justify-center">
      <!--Tab-1: FIFA players-->
      <div id="tabs-content-1" x-show="activeTab===1">
        <!--Players Container-->
        <div class="flex items-center justify-around space-x-10">
          <!--DMS10 card-->
          <%= link_to "https://twitter.com/domenicosuarezo/with_replies", target: "_blank" do %>
            <%= image_tag("DMS10_player_card.png", class:"max-w-sm") %>
          <% end %>
          <!--MAGIC_JS7 card-->
           <%= link_to "https://twitter.com/MagicJs7/with_replies" , target: "_blank" do %>
            <%= image_tag("MAGIC_player_card.png", class:"max-w-sm") %>
          <% end %>
        </div>
      </div>
      <!--Tab-2: Valorant players-->
      <div id="tabs-content-2" x-show="activeTab===2">
        <iframe width="980" height="640" src="https://www.youtube.com/embed/PW0tbayjePo" title="⚫🟡⚫ Nuevo equipo de Valorant 🔫💣 Empieza una nueva era en el Inter de Lima 🍫🍀" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
      </div>
    </div>
  </div>

    <!--Contact Form-->

    <div id= "contact" class="text-center text-2xl font-bold my-6 py-6">
     <p> PONTE EN <span class="text-yellow-500"> CONTACTO</span> CON NOSOTROS</p>
    </div>

    <div class="text-center">
    <p class="mb-5"> Envíamos un <span class="text-yellow-500 font-bold"> mensaje</span> en cualquiera de nuestras redes:</p>
      <a href="https://www.instagram.com/interdelima/" class="mx-3 my-6 px-3 py-6 space-x-3" target="blank"> <%= image_tag("instagram.png", class:"h-32 inline") %> </a>
      <a href="https://twitter.com/interdelima" class="mx-3 my-6 px-3 py-6 space-x-3" target="blank"> <%= image_tag("twitter.png", class:"h-32 inline") %></a>
      <a href="https://www.youtube.com/channel/UCw1RMu-4mKd4feQxNyeHTJw" class="mx-3 my-6 px-3 py-6 space-x-3" target="blank"> <%= image_tag("youtube.png", class:"h-32 inline") %></a>
      <a href="https://www.tiktok.com/@interdelima?lang=es" class="mx-3 my-6 px-3 py-6 space-x-3" target="blank"> <%= image_tag("tiktok.png", class:"h-32 inline") %></a>
    </div>
  </div>


  <!--Social Media-->

  <div class="text-center text-2xl font-bold my-6 py-6">
     <p> ENTÉRATE DE NUESTRAS <span class="text-yellow-500"> PRÓXIMAS JUGADAS</span></p>
  </div>

  <div class="mx-auto my-6 py-6 flex items-center justify-around">
    <!--Twitter-->
    <div class="rounded-2xl border-4 border-yellow-500">
     <a class="twitter-timeline" data-width="600" data-height="600" href="https://twitter.com/interdelima?ref_src=twsrc%5Etfw">Tweets by interdelima</a> <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>
  </div>

</section>
